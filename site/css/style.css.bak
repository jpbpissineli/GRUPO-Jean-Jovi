html,body{
	margin:0;
	padding:0;
		font-family:"Helvetica",sans-seif;
		font-size: 14pt;
	}
	
body{
	overflow-x:hidden;
}

.header {
	background-color: #f7cc0a;
	position:relative;
	box-shadow:
	0px 3px 5px -1px rgba(0, 0, 0, 0.2),
	0px 6px 10px 0px rgba(0, 0, 0, 0.14),
	0px 1px 18px 0px rgba(0, 0, 0, 0.12);
}

.conteudo{
	display:flex;
	justify-content: center;
}

#login {
	background-color: #f7cc0a;
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
	padding: 80px;
	border-radius: 15px;
	color: white;
	text-shadow: 
               -1px -1px 0px #000, 
               -1px 1px 0px #000,                    
                1px -1px 0px #000,                  
                1px 0px 0px #000;
	box-shadow:
	0px 3px 5px -1px rgba(0, 0, 0, 0.2),
	0px 6px 10px 0px rgba(0, 0, 0, 0.14),
	0px 1px 18px 0px rgba(0, 0, 0, 0.12);

}

input{
	padding: 15px;
}

#cadastrar {
	width: 100%;
	border-radius: 15px;
	font-size: 15px;
	background-color: #ff914d;
	cursor: pointer;
}

#cadastrar:hover{
	background-color: #f7d39c;
}